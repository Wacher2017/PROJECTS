<assembly>
    <id>assembly-flock-eureka</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/classes/start.bat</source>
            <outputDirectory>bin</outputDirectory>
        </file>
        <file>
            <source>target/classes/start.sh</source>
            <outputDirectory>bin</outputDirectory>
        </file>
        <file>
            <source>target/classes/stop.sh</source>
            <outputDirectory>bin</outputDirectory>
        </file>
        <file>
            <source>target/${project.build.finalName}.jar</source>
            <outputDirectory>lib</outputDirectory>
        </file>
        <file>
            <source>target/classes/logback.xml</source>
            <outputDirectory>config</outputDirectory>
        </file>
        <file>
            <source>target/classes/application.yml</source>
            <outputDirectory>config</outputDirectory>
        </file>
    </files>
</assembly>